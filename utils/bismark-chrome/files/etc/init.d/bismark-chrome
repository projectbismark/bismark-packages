#!/bin/sh /etc/rc.common

START=99
STOP=1

start() {
    if $(grep -q UNSET_MAC /www/bismark-chrome/index.html) && [ -e /etc/bismark/ID ]; then
        sed -i "s/type=\"hidden\" name=\"device\" value=\".*\"/type=\"hidden\" name=\"device\" value=\"$(cat /etc/bismark/ID)\"/" \
            /www/bismark-chrome/index.html
    fi
}

stop() {
    :
}
